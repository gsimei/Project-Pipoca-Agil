  <h1 class="title text-center mt-5">Parcerias</h1>
  <div class="logo-parcerias">
    <div class="d-flex">
      <%= image_tag "logos/logo_coach.jpg", class: "logo-img" %>
      <%= image_tag "logos/logo_agiliza_ceara.jpg", class: "logo-img" %>
      <%= image_tag "logos/logo_fleks.jpg", class: "logo-img" %>

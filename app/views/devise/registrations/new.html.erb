
<div class="containner devise">
  <div class="row">
    <div class="col-md-4 mx-auto login-form-signup">
      <div class="text-center mb-3 mt-3">
        <p class="title-devise mt-3">Crie sua conta</p>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>
        <% if flash[:error] %>
          <div class="alert alert-danger">
            <%= flash[:error] %>
          </div>
        <% end %>
        <div class="form-inputs-signup mx-auto">
          <div class="form-group">
            <%= f.input :name, required: true, autofocus: true, input_html: { autocomplete: "name", class: "rounded-input form-control" }, label: false, placeholder: "Nome Completo *" %>
          </div>
          <div class="form-group">
            <%= f.input :date_of_birth, required: true, as: :string, input_html: { autocomplete: "off", class: "rounded-input form-control", placeholder: "Data de Nascimento (dd/mm/aaaa) *" }, label: false %>
          </div>
          <div class="form-group">
            <%= f.input :email, required: true, input_html: { autocomplete: "email", class: "rounded-input form-control" }, label: false, placeholder: "E-mail *" %>
          </div>
          <div class="form-group col">
            <%= f.input :password, required: true, input_html: { autocomplete: "new-password", class: "rounded-input form-control", data: { password_target: "password" } }, label: false, placeholder: "Senha *" %>
          </div>
          <p class="hint-password">Mínimo de <%= @minimum_password_length %> caracteres. Utilize letras, números e símbolos.</p>
          <div class="form-group">
            <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password", class: "rounded-input form-control" }, label: false, placeholder: "Confirme sua Senha *" %>
          </div>
          <div class="agree-terms">
            <div class="form-check">
              <%= f.check_box :agree_terms, id: "agree_terms", class: "form-check-input" %>
              <%= label_tag "agree_terms", "Eu li e concordo com os ", class: "form-check-label" %>
              <%= link_to "termos de privacidade", privacy_path, class: "privacy-terms" %>
            </div>
          </div>
          <div class="mandatory-field">
            <p>* Campos obrigatórios</p>
          </div>
          <div class="icons-signup">
            <p class="txt-social"> Ou entre com:</p>
            <div class="social-icons">
              <i class="fa-brands fa-facebook"></i>
              <i class="fa-brands fa-google"></i>
            </div>
          </div>
          <div class="form-actions text-center">
            <%= f.button :submit, "Cadastrar", class: "btn btn-lg btn-devise-signup" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

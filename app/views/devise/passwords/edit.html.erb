
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :reset_password_token, value: resource.reset_password_token %>

  <% if resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs">
    <%= f.label :password, "Nova senha" %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    <% resource.errors.full_messages_for(:password).each do |message| %>
      <span class="error"><%= message %></span>
    <% end %>

    <%= f.label :password_confirmation, "Confirme a nova senha" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
      <span class="error"><%= message %></span>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.submit "Alterar minha senha", class: "change-password-button" %>
  </div>
<% end %>

<div class="containner devise">
  <div class="row">
    <div class="col-md-4 mx-auto login-form">
      <div class="logo">
        <%= image_tag "logos/logo_pipoca_agil.png" %>
        <%# <img src="https://res.cloudinary.com/dbtr2yaho/image/upload/v1684956837/Sem_t%C3%ADtulo_yfiutx.png" alt="Logo"> %>
      </div>
      <div class="text-center txt-login">
        <p class="title-devise">Fa√ßa Login</p>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "rounded-input" },
                      placeholder: "E-mail *",
                       label: false %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "rounded-input" },
                      placeholder: "Senha *",
                      label: false %>
        </div>
        <div class= "password-links">
          <%= link_to "Esqueci minha senha?!", new_password_path(resource_name) %>
          <%#= f.input :password, as: :boolean, label: "Exibir senha" %>
          <p>Exibir Senha</p>
        </div>
        <div class="form-actions text-center">
          <%= f.button :submit, "Entrar", class: "btn btn-lg btn-devise" %>
        </div>
      <% end %>
      <div class="icons">
        <p style="font-weight: bold; color: #000000; font-size: 18px;"> Ou entre com:</p>
        <div class="social-icons">
          <i class="fa-brands fa-facebook"></i>
          <i class="fa-brands fa-google"></i>
        </div>
      </div>
      <%# <%= render "devise/shared/links" %>
      <%#= link_to "Voltar", root_path, class: "btn-voltar" %>
    </div>
  </div>
</div>

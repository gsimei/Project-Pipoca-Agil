
<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto login-form">
      <div class="logo">
        <%= image_tag "logos/logo_pipoca_agil.png" %>
        <%# <img src="https://res.cloudinary.com/dbtr2yaho/image/upload/v1684956837/Sem_t%C3%ADtulo_yfiutx.png" alt="Logo"> %>
      </div>
      <div class="text-center">
        <h2 style="font-weight: bold; color: #000000;">Fa√ßa Login</h2>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "rounded-input" },
                      placeholder: "E-mail *" %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "rounded-input" },
                      placeholder: "Senha *" %>
          <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %>
          <%#= f.input :password, as: :boolean, label: "Exibir senha" %>
        </div>
        <div class="form-actions text-center">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>
    </div>
    <div class="social-icons">
      <p style="font-weight: bold; color: #000000; font-size: 18px;"> Ou entre com:</p>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>

<div class="container devise">
  <div class="row">
    <div class="col-md-4 mx-auto login-form">
      <div class="logo">
        <%= image_tag "logos/logo_pipoca_agil.png" %>
      </div>
      <div class="text-center txt-login">
        <p class="title-devise">Fa√ßa Login</p>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>
        <% if resource.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "rounded-input" },
                      placeholder: "E-mail *",
                      label: false %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "rounded-input" },
                      placeholder: "Senha *",
                      label: false %>
        </div>
        <div class="password-links">
          <%= link_to "Esqueci minha senha?!", new_password_path(resource_name) %>
          <p>Exibir Senha</p>
        </div>
        <div class="form-actions text-center">
          <%= f.button :submit, "Entrar", class: "btn btn-lg btn-devise" %>
        </div>
      <% end %>
      <div class="icons">
        <p style="font-weight: bold; color: #000000; font-size: 18px;"> Ou entre com:</p>
        <div class="social-icons">
          <i class="fa-brands fa-facebook"></i>
          <i class="fa-brands fa-google"></i>
        </div>
      </div>
    </div>
  </div>
</div>
